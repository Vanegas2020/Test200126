# ============================================================================
# Environment Variables - Example Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# ============================================================================
# Application Configuration
# ============================================================================

# Base URL of the application under test
BASE_URL=http://localhost:3000

# ============================================================================
# Authentication Configuration
# ============================================================================

# URL de la página de inicio de sesión (requerida para páginas autenticadas)
LOGIN_URL=


# ============================================================================
# Test Credentials
# ============================================================================
# Add your test credentials here - DO NOT use production credentials!

# Admin
TEST_USER_ADMIN_USERNAME=your_username_here
TEST_USER_ADMIN_PASSWORD=your_password_here



# ============================================================================
# Playwright Configuration
# ============================================================================

# Set to 'true' to run tests in headed mode (see the browser)
HEADED=false

# Set to 'true' to run tests in debug mode
DEBUG=false

# Number of workers for parallel test execution
WORKERS=auto

# Browser to use (chromium, firefox, webkit)
BROWSER=chromium

# ============================================================================
# CI/CD Configuration
# ============================================================================

# Set to 'true' when running in CI environment
CI=false

# ============================================================================
# Optional: API Configuration (if testing APIs)
# ============================================================================


# ============================================================================
# Optional: Storage State Configuration
# ============================================================================

# Path to save authenticated storage state
STORAGE_STATE_PATH=.auth/user.json

# ============================================================================
# Optional: Reporting Configuration
# ============================================================================

# Slack webhook for test notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email for test reports (optional)
# REPORT_EMAIL=your-email@example.com
